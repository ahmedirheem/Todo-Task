<%- include("./include/header.ejs") %> 

    <!-- Start Header -->
    <header>
        <div class="tasks-info">
            <div class="all-tasks">
                <span class="title">All Tasks</span>
                <span class="sep">|</span>
                <span class="number">15</span>
            </div>
            <div class="completed-tasks">
                <span class="title">Completed Tasks</span>
                <span class="sep">|</span>
                <span class="number">7</span>
            </div>
            <div class="uncompleted-tasks">
                <span class="title">Uncompleted Tasks</span>
                <span class="sep">|</span>
                <span class="number">8</span>
            </div>
        </div>
        <div class="add-task">
            <a href="/add">Add Task</a>
        </div>
    </header>
    <!-- End Header -->

    <!-- Start Filters Section -->
    <nav>
        <div class="search-task">
            <input type="search" name="search" placeholder="Search for a task" id="search">
            <span class="search-icon" onclick="filter1()"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--! Font Awesome Pro 6.2.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. --><path d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352c79.5 0 144-64.5 144-144s-64.5-144-144-144S64 128.5 64 208s64.5 144 144 144z"/></svg></span>
            <% function filter1() { %>
                <% window.location.replace("/khra"); %>
                <% } %>
            <!-- <%
                const filter = function() {
                   document.querySelector('#search').value;
                   window.location.replace("/khra");
                   console.log("samer");
}               
%> -->
        </div>
        <div class="filter">
            <a href="/completed" id="completed">Completed</a>
            <a href="/uncompleted" id="uncompleted">Uncompleted</a>
        </div>
    </nav>
    <!-- End Filters Section -->

    <!-- Start Tasks Table -->
    <main>
        <div class="table">
            <% if (tasks != '') { %>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Task Name</th>
                            <th>Task Desription</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Include Data Table Row -->
                        <% tasks.forEach((task, index)=>{ %>  
                            <tr class="task_row" >
                                <td><%= index + 1 %> </td>
                                <td><%= task.title %> </td>
                                <td><%= task.description %></td>
                                <td><%= task.date %></td>
                                <td class="actions">
                                    <a href="/completedCheck/<%= task.id %>"><input type="checkbox" name="cheked" class="checkbox-input"></a>
                                </form>
                                    <a href="/update/<%= task.id %>" id="update-btn">
                                        <span><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M471.6 21.7c-21.9-21.9-57.3-21.9-79.2 0L362.3 51.7l97.9 97.9 30.1-30.1c21.9-21.9 21.9-57.3 0-79.2L471.6 21.7zm-299.2 220c-6.1 6.1-10.8 13.6-13.5 21.9l-29.6 88.8c-2.9 8.6-.6 18.1 5.8 24.6s15.9 8.7 24.6 5.8l88.8-29.6c8.2-2.8 15.7-7.4 21.9-13.5L437.7 172.3 339.7 74.3 172.4 241.7zM96 64C43 64 0 107 0 160V416c0 53 43 96 96 96H352c53 0 96-43 96-96V320c0-17.7-14.3-32-32-32s-32 14.3-32 32v96c0 17.7-14.3 32-32 32H96c-17.7 0-32-14.3-32-32V160c0-17.7 14.3-32 32-32h96c17.7 0 32-14.3 32-32s-14.3-32-32-32H96z"/></svg></span>
                                    </a>
                                    <a href="/delete/<%= task.id %>" id="delete-btn" >
                                        <span><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"/></svg></span>
                                    </a>
                                </td>
                            </tr>
                        <% }) %> 
                    </tbody>
                </table>
            <% }else{ %>
                <h1>No Users Found In DataBase</h1>
            <% } %> 
        </div>
    </main>
    <!-- End Tasks Table -->
    <div class="pagination">
        <a href="/?page=<%= +page-1 %>" class="pre">Previous</a>
        <div class="curr"><%= +page+1 %> </div>
        <a href="/?page=<%= +page+1 %>" class="next">Next</a>
    </div>
    <script>
        function filter1(){
            const input=document.querySelector('#search').value;
           window.location.replace(`/searchFilter/${input}`);
        }
    </script>
<%- include("./include/footer.ejs") %> 