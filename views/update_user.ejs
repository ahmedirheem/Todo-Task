<!-- Include Header -->
<%- include('include/header.ejs') %> 

<section class="add_task_sec">
    <!-- Start Filters Section -->
    <nav>
        <div class="filter">
            <a href="/" id="all_tasks_btn">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--! Font Awesome Pro 6.2.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. --><path d="M41.4 278.6L18.7 256l22.6-22.6 160-160L224 50.7 269.3 96l-22.6 22.6L109.3 256 246.6 393.4 269.3 416 224 461.3l-22.6-22.6-160-160zm192 0L210.7 256l22.6-22.6 160-160L416 50.7 461.3 96l-22.6 22.6L301.3 256 438.6 393.4 461.3 416 416 461.3l-22.6-22.6-160-160z"/></svg>
                All Tasks</a>
        </div>
    </nav>
    <!-- End Filters Section -->

    <!-- Start Tasks Form -->
    <form action="/update/<%= task._id %>" method="POST" id="add_task_form">
        <div class="new_task">
            <div>
                <label for="task_title">Task Title</label>
                <input type="text" value="<%= task.title %>" name="title" id="task_title">
            </div>
            <br>
            <div>
                <label for="task_dec">Task Description</label>
                <textarea type="text" name="description" id="task_dec"><%= task.description %></textarea>
            </div>
            <br>
            <div>
                <label for="task_date">Task Date</label>
                <input type="date" name="date" value="<%= task.date %>" id="task_date">
            </div>
            <br>
            <div class="submit_task_container">
                <button type="submit" id="submit_task">Update Task</button>
            </div>
        </div>
    </form>
    <!-- End Tasks Form -->

</section>

<!-- Include Footer -->
<%- include('include/footer.ejs') %> 
